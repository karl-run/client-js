{
    "compilerOptions": {

        // https://parceljs.org/languages/typescript/#isolatedmodules
        "isolatedModules" : false,
        "pretty"          : true,
        "sourceMap"       : false,
        "strict"          : true,
        "noImplicitAny"   : true,
        "alwaysStrict"    : true,
        "module"          : "CommonJS",
        "target"          : "ES2019",
        // "importHelpers"   : false,
        // "noEmitHelpers"   : true,
        "types"           : ["mocha"],
        "newLine"         : "lf",
        "outDir"          : "dist/lib",
        "listEmittedFiles": true,
        "esModuleInterop" : true,
        "allowJs"         : false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
}